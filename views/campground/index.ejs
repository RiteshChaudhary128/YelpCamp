<% layout('layouts/boilerplate') %>
    <div>
        <h1>All Campgrounds</h1>
        <h2><a href="/campground/new"> Add Campground</a></h2>

        <ul>
            <% for(let campground of campgrounds) {%>
                <div class="card">
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <img src=<%=campground.images[0].url%> alt="..." class="img-fluid">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <%=campground.title%>
                                </h5>
                                <p class="text-muted">
                                    <%=campground.location%>
                                </p>
                                <p class="card-text">
                                    <%=campground.description%>
                                </p>
                                <a href="/campground/<%=campground._id%>" class="btn btn-primary">View <%=campground.title %> </a>
                            </div>
                        </div>
                    </div>
                </div>
                <%}%>
        </ul>
    </div>